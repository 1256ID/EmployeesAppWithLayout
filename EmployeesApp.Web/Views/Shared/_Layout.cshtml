<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="btn-group" role="group" aria-label="Basic example">
            <a asp-controller="Employees" asp-action="index" class="btn btn-secondary">Index</a>
            <a asp-controller="Employees" asp-action="create" class="btn btn-secondary">Create</a>
        </div>
    </header>

    <h1>@ViewBag.Title</h1>

    <div>
        @RenderBody()
    </div>

    <footer class="container-fluid bg-dark text-white py-3 text-center mt-auto p-5">
        &copy; 2025 EmployeesApp. Alla rättigheter förbehållna.
    </footer>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js" asp-fallback-src="/Scripts/lib/jquery/jquery.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
